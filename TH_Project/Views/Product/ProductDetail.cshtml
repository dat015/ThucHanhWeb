@{
    ViewBag.Title = "Chi Tiết Sản Phẩm";
    var product = ViewBag.Product; // Giả sử bạn đã truyền sản phẩm từ controller vào ViewBag
}
@model TH_Project.ViewModel.DetailProductVM
<style>
    .category_section {
        display: flex;
        flex-direction: row; /* Hiển thị theo hàng ngang */
        padding: 20px;
    }

    .cate_pick {
        width: 30%; /* Chiếm 30% chiều rộng */
    }

    .category-list {
        list-style-type: none; /* Bỏ dấu đầu dòng */
        padding: 0; /* Bỏ padding mặc định */
    }

    .category-item {
        margin-bottom: 10px; /* Khoảng cách giữa các mục */
    }
</style>



<!-- end slider section -->




<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.SACH.Anhbia" alt="@Model.SACH.Tensach" class="img-fluid" />
        </div>
        <div class="col-md-6">
            <h2>@Model.SACH.Tensach</h2>
            <h4>Giá: @Model.SACH.Giaban</h4>
            <p><strong>Mô tả:</strong> @Model.SACH.Mota</p>

            <div id="Datmua"> <a href="@Url.Action("ThemGioHang", "GioHang", new { @iMasach = @Model.SACH.Masach, @strURL = "Index" })" class="btn btn-primary mt-3"> Thêm vào giỏ hàng </a> </div>
        </div>
    </div>
</div>






