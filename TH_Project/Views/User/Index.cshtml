@model TH_Project.Data.KHACHHANG

<style>
    .register-form {
        width: 100%;
        max-width: 400px;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        padding-top: 30px;
    }

        .register-form h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .register-form .form-group {
            margin-bottom: 15px;
        }

        .register-form .btn {
            width: 100%;
        }
</style>

<div class="register-form">
    <h2 class="text-center mb-4">Đăng ký</h2>
    <form method="POST" action="@Url.Action("DangNhap", "User")" id="registerForm">
        <!-- Hiển thị các lỗi chung nếu có -->
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label for="taiKhoan">Tài Khoản</label>
            @Html.EditorFor(m => m.TaiKhoan, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.TaiKhoan, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="matKhau">Mật Khẩu</label>
            @Html.EditorFor(m => m.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-success btn-block">Đăng Nhập</button>
    </form>
</div>
